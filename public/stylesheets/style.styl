@import 'nib'

red         = #F44336
dark_red    = #B71C1C
pink        = #E91E63
plum        = #563E58
purple      = #9C27B0
deep_purple = #673AB7
indigo      = #3F51B5
blue        = #2196F3
light_blue  = #55acee
cyan        = #00BCD4
teal        = #009688
green       = #4CAF50
lime        = #ace600
yellow      = #FFEB3B
amber       = #FFA000
orange      = #FF9800
deep_orange = #FF5722
blue_grey   = #607D8B
black       = #111111
white       = #f2f2f2
pearl       = #edecec

promo       = #C8E6C9
pplay       = #DCEDC8
europa      = #BBDEFB
rplay       = #FFE0B2
releg       = #FFCDD2

// COLOURS
.promo
  border-left 5px solid promo

.pplay
  border-left 5px solid pplay

.europa
  border-left 5px solid europa

.rplay
  border-left 5px solid rplay

.releg
  border-left 5px solid releg

.reg-row
  border-left 5px solid rgba(0,0,0,0)

.green-text
  color green

.red-text
  color red

.yellow-text
  color amber

.blue-text
  color indigo
.orange-text
  color deep_orange


// UNIVERSAL
html
  min-height 100%
  position relative

body
  margin 0 0 48px
  font-size 16px
  font-weight 500
  height 100%
  font-family Roboto, RobotoDraft, 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  background-color pearl

.max-width
  margin  0 auto
  max-width  960px

.inline
  display inline

#page-wrap
  min-height 100%

h1,h2,h3,h4,h5,h6
  font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

p
  font-family Roboto, 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif


// HEADER
header
  font-family Montserrat, sans-serif

nav
  color white
  font-size large

.navbar
  margin-bottom 0

.navbar-nav
  margin 0 auto

.navbar-default.navbar
  background-color dark_red

.navbar .navbar-nav > li > a
  font-size large
  color white

.hvr-fade:hover, .hvr-fade:focus, .hvr-fade:active
  background-color #E91E63

@media (max-width: 667px)
  .nav-tabs
    overflow-x auto
    overflow-y hidden
    white-space nowrap
    &>li
      float none
      display inline-block


// TABS
.tab-view
  background-color white
  box-shadow 0 5px 6px rgba(0,0,0,0.2);
  height 48px
  position fixed
  top 60px
  width 100%
  z-index 10

.nav-tabs
  background-color white
  padding-top 5px
  height 48px
  & li a
    color black!important
  & li>a:hover
    color black!important
  & li>a:focus
    color black!important

.nav-tabs .active
  box-shadow inset 0px -4px 0px 0px pink

.hvr-underline-reveal:before
  background pink

.mfb-component--tr
  margin inherit
  position relative
  float right
  right 21px
  top -29px


// CONTENT
#content
  position relative
  margin-top 108px
  margin-bottom 158px

#harder-stadium
  width 100%
  box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

.league-container
  max-width 860px
  position relative
  top 35px
  margin 0 auto
  overflow-x auto
  &.well
    box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  & h2
    text-align center

.league-logo
  position relative
  display block
  height 95px
  width auto
  top 18px
  margin 0 auto

.league-table
  & th
    cursor pointer
  & td
    font-weight 500

.table>tbody>tr>td
  line-height 1.8


// FOOTER
footer
  background-color dark_red
  position absolute
  left 0
  bottom 0
  width 100%
  height 48px
  box-shadow 0 -2px 8px 0 rgba(0, 0, 0, 0.2), 0 -6px 20px 0 rgba(0, 0, 0, 0.19);
  & p
    text-align center
    color white
    position relative
    top 14px
