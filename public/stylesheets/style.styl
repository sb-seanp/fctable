@import 'nib'

red         = #F44336
dark_red    = #B71C1C
pink        = #E91E63
plum        = #563E58
purple      = #9C27B0
deep_purple = #673AB7
indigo      = #3F51B5
blue        = #2196F3
light_blue  = #55acee
cyan        = #00BCD4
teal        = #009688
green       = #4CAF50
lime        = #ace600
yellow      = #FFEB3B
orange      = #FF9800
deep_orange = #FF5722
blue_grey   = #607D8B
black       = #111111
white       = #f2f2f2
pearl       = #edecec

// UNIVERSAL
body, html
  font-size 16px
  height 100%
  font-family Roboto, RobotoDraft, 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  background-color pearl
.max-width
  margin  0 auto
  max-width  960px
h1,h2,h3,h4,h5,h6
  font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
p
  font-family Roboto, 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

// HEADER
header
  font-family Montserrat, sans-serif
nav
  color white
  font-size large
.navbar
  margin-bottom 0
.navbar-nav
  margin 0 auto
.navbar-default.navbar
  background-color dark_red
.navbar .navbar-nav > li > a
  font-size large
  color white
.hvr-fade:hover, .hvr-fade:focus, .hvr-fade:active
  background-color #E91E63

// TABS
.tab-view
  background-color white
  box-shadow 0 2px 6px rgba(0,0,0,0.2);
  height 48px
.nav-tabs
  background-color white
  padding-top 5px
  height 48px
  & li
    padding-bottom 1px
    & a
      color black!important
  & li>a:hover
    color black!important
  & li>a:focus
    color black!important
.nav-tabs .active
  box-shadow inset 0px -4px 0px 0px pink
.hvr-underline-reveal:before
  background pink

// CONTENT
.league-container
  max-width 860px
  position relative
  top 35px
  margin 0 auto
.league-logo
  position relative
  display block
  height 95px
  width auto
  top 18px
  margin 0 auto
