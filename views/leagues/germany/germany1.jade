extends ../../layout
block content
    .logo-container.animated.fadeIn
        img.league-logo(src='/images/leagues/germany1.svg' alt='Bundesliga')
    .well.league-container.animated.fadeInUp
        table.table.table-hover.league-table
            thead
                tr
                    th Position
                    th Club
                    th Played
                    th Win
                    th Draw
                    th Loss
                    th For
                    th Against
                    th Diff
                    th Points
            tbody
                each club, i in germany1
                    tr.reg-row
                        td: b #{club.pos}
                        td #{club._id}
                        td #{club.played}
                        td.green-text #{club.wins}
                        td.yellow-text #{club.draws}
                        td.red-text #{club.losses}
                        td.blue-text #{club.gfor}
                        td.orange-text #{club.gag}
                        td #{club.gd}
                        td #{club.points}

    .well.league-container.animated.fadeInUp.wow
        h2 Home and Away
        hr
        table.table.table-hover.league-table#ha-table
            thead
                tr
                    th Pos
                    th Club
                    th Played
                    th HW
                    th HD
                    th HL
                    th HFor
                    th HAg
                    th AW
                    th AD
                    th AL
                    th AFor
                    th AAg
            tbody
                each club, i in germany1
                    tr.reg-row
                        td: b #{club.pos}
                        td #{club._id}
                        td #{club.played}
                        td.green-text #{club.winsh}
                        td.yellow-text #{club.drawsh}
                        td.red-text #{club.lossesh}
                        td.blue-text #{club.gforh}
                        td.orange-text #{club.gagh}
                        td.green-text #{club.winsa}
                        td.yellow-text #{club.drawsa}
                        td.red-text #{club.lossesa}
                        td.blue-text #{club.gfora}
                        td.orange-text #{club.gaga}
